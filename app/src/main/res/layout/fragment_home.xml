<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".userinterface.homescreen.fragments.HomeFragment">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardView1"
        android:layout_width="150dp"
        android:layout_height="160dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="15dp"
        android:clickable="true"
        android:focusable="true"
        app:cardBackgroundColor="@color/lightgreen"
        app:cardCornerRadius="8dp">

        <!-- Your main content goes here -->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:src="@drawable/daily" />

        <TextView
            android:id="@+id/textMainContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:gravity="center"
            android:padding="16dp"
            android:text="Daily"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!-- Hidden content -->
        <LinearLayout
            android:id="@+id/hiddenLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/lightgreen"
            android:orientation="vertical"
            android:visibility="gone">

            <!-- Your hidden content goes here -->

            <TextView
                android:id="@+id/textHiddenContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="Sale"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textHidnContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="Void"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textHinContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="Refund"
                android:textSize="14sp" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

